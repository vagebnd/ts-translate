{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2019"],
    "paths": {
      "/@/*": ["src/*"]
    }
  },
  "include": ["./src", "./tests", "tests/.ts-translations.js"],
  "exclude": ["node_modules", "dist", "tests/data"]
}
