{
  "name": "@vagebond/vue-translations-helper",
  "version": "0.0.1",
  "description": "A tool that scans your files for vue-i18n translations and helps you translate them",
  "main": "index.js",
  "author": "Gianluca Riggio",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc -p tsconfig.build.json && tsc-alias",
    "dev": "ts-node -r tsconfig-paths/register ./src/main.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "tsc-alias": "^1.6.4",
    "tsconfig-paths": "^3.14.0",
    "typescript": "^4.6.2"
  },
  "bin": {
    "vue-translate": "./bin/main"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "trailingComma": "all",
    "singleQuote": true,
    "semi": false
  },
  "dependencies": {
    "fast-glob": "^3.2.11",
    "inquirer": "^8.2.1"
  }
}
